[tool.ruff]
line-length = 100
target-version = "py311"
select = [
    "E",    # pycodestyle errors
    "F",    # pyflakes
    "I",    # isort
    "UP",   # pyupgrade
    "B",    # flake8-bugbear
]
ignore = [
    "E203",  # Whitespace before ':'
]

[tool.ruff.isort]
known-third-party = ["django", "rest_framework"]
